<Window x:Class="Bucher.View.EditOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bucher.View"
        mc:Ignorable="d"
        Title="Редактировать заказ" Height="450" Width="250">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="38"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Margin="10,0,10,10">

                <Label Content="Заказ"/>
                <ComboBox ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrders}"/>

                <Label Content="Цена"/>
                <TextBox Text="{Binding Price}"/>

                <Label Content="Книга"/>
                <ComboBox ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook}"/>

                <Label Content="Клиент"/>
                <ComboBox ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}"/>

            </StackPanel>

            <Button Grid.Row="1" Content="Редактировать книгу" Command="{Binding EditOrderCommand}" />
        </Grid>
    </Grid>
</Window>
