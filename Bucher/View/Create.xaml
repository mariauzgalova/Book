<Window x:Class="Bucher.View.Create"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bucher.ViewModel.AddViewModel"
        mc:Ignorable="d"
        Title="Создать книгу" Height="460" Width="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="10,0,10,10">

            <Label Content="Название"/>
            <TextBox Text="{Binding Name}"/>

            <Label Content="Цена"/>
            <TextBox Text="{Binding Price}"/>

            <Label Content="Жанр"/>
            <ComboBox ItemsSource="{Binding Genres}" SelectedItem="{Binding SelectedGenre}"/>

            <Label Content="Описание"/>
            <TextBox Text="{Binding Description}"/>
            
        </StackPanel>
        <Button Grid.Row="1" Content="Добавить книгу" Command="{Binding AddBookCommand}"/>
    </Grid>
</Window>
