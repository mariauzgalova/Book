<Window x:Class="Bucher.View.Creategenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bucher.ViewModel.AddViewModel"
        mc:Ignorable="d"
        Title="Создать жанр" Height="450" Width="250">
    
    
    <Grid HorizontalAlignment="Left" Width="250">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="10,0,10,10">


            <Label Content="Название жанра"/>
            <TextBox Text="{Binding Name}"/>

            <Label Content="Описание жанра"/>
            <TextBox Text="{Binding Description}" />

        </StackPanel>

        <Button Content="Добавить жанр" Height="38" Grid.RowSpan="2" VerticalAlignment="Bottom" Command="{Binding AddGenreCommand}"/>

    </Grid>
</Window>
